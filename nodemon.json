{
  "restartable": "rs",
  "ignore": [
    ".vscode/",
    ".git",
    "node_modules/",
    "dist/",
    "coverage/",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "watch": [
    "src/"
  ],
  "exec": "node -r tsconfig-paths/register -r ts-node/register",
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json,ts"
}
