{
  "name": "koa2-sequelize-demo",
  "repository": "git@github.com:haloxie/koa2-sequelize-demo",
  "author": "Haloxie",
  "version": "0.1.0",
  "main": "build/index.js",
  "scripts": {
    "db:init": "sequelize migration:generate",
    "db:migrate": "sequelize db:migrate",
    "db:undo": "sequelize db:migrate:undo",
    "db:undoAll": "sequelize db:migrate:undo:all",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "start": "node .",
    "build": "rimraf build/ && tsc",
    "dev": "rimraf build/ && tsc-watch --onSuccess 'node .'",
    "prd": "pm2 start bin/www",
    "test": "echo \"Error: no test specified\" && exit 1",
    "preinstall": "node -e \"if (!/yarn\\.js$/.test(process.env.npm_execpath)) {throw new Error('NPM is not recommended, use Yarn instead')}\""
  },
  "dependencies": {
    "biguint-format": "^1.0.2",
    "dotenv": "^8.2.0",
    "flake-idgen": "^1.4.0",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^6.1.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.0",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "mysql2": "^2.2.5",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.6.2",
    "sequelize-typescript": "^2.1.0",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.33",
    "@types/debug": "^4.1.5",
    "@types/flake-idgen": "^0.1.30",
    "@types/koa": "^2.13.1",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-helmet": "^6.0.2",
    "@types/koa-json": "^2.0.18",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.4.2",
    "@types/moment": "^2.13.0",
    "@types/node": "^14.14.41",
    "@types/sequelize": "^4.28.9",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "nodemon": "^1.19.1",
    "rimraf": "^3.0.2",
    "sequelize-cli": "^6.2.0",
    "tsc-watch": "^4.2.9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts?(x)": [
      "eslint --cache --fix --ext .tsx --ext .ts"
    ]
  }
}
